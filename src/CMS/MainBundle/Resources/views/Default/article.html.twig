{% extends "CMSMainBundle::layout.html.twig" %}
{% block title %}{{ article.title }}{% endblock %}
{% block content %}
    <div class="row">

        <div class="col-sm-8 blog-main">
            {% if article %}
                <div class="blog-post article">
                    <h2 class="blog-post-title">{{ article.title }}</h2>
                    <p class="blog-post-meta">{% if article.datecreate %}{{ article.datecreate|date('H:i d/m/Y') }}{% endif %}</p>

                    <div class="blog-post-description">
                        {{ article.description|raw('html') }}
                    </div>
                    <div class="blog-post-tool">
                        <div class="printer"><a href="javascript:window.print()" title="Máy in"><img alt="printer" src="{{ asset('bundles/main/img/printer.png') }}"></a></div>
                        <div class="tags">
                            Từ khóa:
                            {%  for tag in article.tags %}
                            <a href="{{ app.request.schemeAndHttpHost }}{{ app.request.getBaseURL() }}/tim-kiem?tu-khoa={{ tag.name }}" title="{{ tag.name }}">{{ tag.name }}</a>
                            {% endfor %}
                        </div>
                    </div>
                    <div id="comments">
                        <fb:comments href="{{ app.request.schemeAndHttpHost }}{{ app.request.getBaseURL() }}/chuyen-muc/{{ article.groupArticle.url }}/{{ article.url }}" width="600" numposts="5" colorscheme="light"></fb:comments>
                    </div>
                </div>
                {% if related|length %}
                <div class="related-post">
                    <h4>Bài viết liên quan</h4>
                    <ul>
                        {% for article in related %}
                        <li><a href="{{ app.request.schemeAndHttpHost }}{{ app.request.getBaseURL() }}/chuyen-muc/{{ article.groupArticle.url }}/{{ article.url }}" title="{{ article.title }}">{{ article.title }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}
            {% else %}
                <div class="alert">
                    <span>Dữ liệu đang được cập nhật</span>
                </div><!-- /.blog-post -->
            {% endif %}
        </div><!-- /.blog-main -->
        {{ render(controller("CMSMainBundle:Default:rightSlideBar", {'cpc': true, 'listSpecial': listSpecial}))}}
    </div><!-- /.row -->

{% endblock %}