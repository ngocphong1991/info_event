{% extends "CMSMainBundle::layout.html.twig" %}
{% block stylesheets %}<link href="{{ asset('bundles/main/css/MetroJs.css') }}" rel="stylesheet">{% endblock %}
{% block title %}Trang chủ{% endblock %}
{% block content %}
    <div class="blog-banner">
        <div class="row">
            <div class="col-sm-8 blog-banner-main">
                {% for special in specialGroup %}
                    <div class="live-tile" id="tile1" data-mode="flip">
                        <div class="flip-front">
                            <a title="{{ special.name }}" href="{{ app.request.schemeAndHttpHost }}{{ app.request.getBaseURL() }}/{{ special.url }}">
                                <img class="full" alt="{{ special.name }}" src="{{ asset('uploads/group/145x145/') }}s_{{ special.image }}" >
                            </a>
                        </div>
                        <div class="flip-back">
                            <a title="{{ special.name }}" href="{{ app.request.schemeAndHttpHost }}{{ app.request.getBaseURL() }}/{{ special.url }}">
                                <img class="full" alt="{{ special.name }}" src="{{ asset('uploads/group/145x145/') }}s_{{ special.imageActive }}" >
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="col-sm-4 blog-banner-slide-bar">
                {% for special in specialGroup %}
                    <ul class="newest">
                    {% for article in special.articles %}
                        {%  set count = special.articles|length %}
                        {% if loop.index > count - 2 %}
                        <li>
                            <a href="{{ app.request.schemeAndHttpHost }}{{ app.request.getBaseURL() }}/{{ article.url }}" title="{{ article.title }}"><img src="{{ asset('uploads/article/300x300/') }}m_{{ article.image }}" alt="{{ article.title }}"></a>
                            <a class="opacity" href="{{ app.request.schemeAndHttpHost }}{{ app.request.getBaseURL() }}/{{ article.url }}" title="{{ article.title }}">{{ article.title }}</a>
                        </li>
                        {% endif %}
                    {% endfor %}
                    </ul>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-sm-8 blog-main">

            {% for entity in pagination %}
            <div class="blog-post">
                <h2 class="blog-post-title"><a href="{{ app.request.schemeAndHttpHost }}{{ app.request.getBaseURL() }}/{{ entity.url }}" title="{{ entity.title }}">{{ entity.title }}</a></h2>
                <p class="blog-post-meta">{% if entity.datecreate %}{{ entity.datecreate|date('H:i d/m/Y') }}{% endif %}</p>
                <div class="blog-post-image">
                    <a href="{{ app.request.schemeAndHttpHost }}{{ app.request.getBaseURL() }}/{{ entity.url }}" title="{{ entity.title }}">
                        <img src="{{ asset('uploads/article/') }}{{ entity.image }}" alt="{{ entity.title }}">
                    </a>
                </div>
                <div class="blog-post-description">
                    {{ entity.sortDescription }} ....
                </div>
                <p class="blog-post-view-more"><a href="{{ app.request.schemeAndHttpHost }}{{ app.request.getBaseURL() }}/{{ entity.url }}" title="Xem tiếp">Xem tiếp</a></p>
            </div><!-- /.blog-post -->
            {% endfor %}
            {{ knp_pagination_render(pagination) }}
            <ul class="pagination pagination-custom">
                <li class="disabled"><span>Đầu</span></li>
                <li class="active"><span>1 <span class="sr-only">(current)</span></span></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#">Cuối</a></li>
            </ul>

        </div><!-- /.blog-main -->
        {{ render(controller("CMSMainBundle:Default:rightSlideBar",{'cpc':false, 'listSpecial': false}))}}
    </div><!-- /.row -->
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('bundles/main/js/MetroJs.min.js') }}"></script>
    <script type="text/javascript">
        window.log=function(){if(this.console){console.log(Array.prototype.slice.call(arguments));}};
        jQuery.fn.log=function (msg){console.log("%s: %o", msg,this);return this;};

        var $liveTitle = $(".blog-banner-main .live-tile");
        var $length = $liveTitle.length;
        var showTime = 3000;
        var roundTime = 4000;
        var totalTime = $length*roundTime;
        var $tiles;
        var timeOutFlipId;
        var timeOutSliderId;
        var $newFeed;

        $(document).ready(function(){
            flip();
            sliderNewest();
        });
        function activeSlider($newFeed){
            console.log($newFeed);
            $($newFeed).fadeOut().removeClass('active').next().fadeIn().addClass('active');
        }

        function sliderNewest(){
            $(".blog-banner-slide-bar .newest").each(function(index, element){
                var delay = index * roundTime;
                setTimeout(function(){
                    $newFeed = ".newest:eq("+index+")";
                    $($newFeed).addClass('active').fadeIn().prev().fadeOut().removeClass('active');
                }, delay);
            });

            timeOutId = setTimeout("sliderNewest()", totalTime);
        }

        function flip(){
            if($tiles){
                $tiles.liveTile("destroy", true);
            }
            $tiles = $liveTitle.liveTile({
                playOnHover: false,
                repeatCount: 0,
                delay: showTime,
                initDelay: 0,
                startNow: false,
                animationComplete: function(tileData){
                    $(this).liveTile("play");
                    tileData.animationComplete = function(){};
                }
            }).each(function(idx, ele){
                var delay = idx * roundTime;
                $(ele).liveTile("play", delay);
            });


            timeOutFlipId = setTimeout("flip()", totalTime);
        }

    </script>
{% endblock %}